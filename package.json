{
  "name": "thunder",
  "version": "1.0.0",
  "description": "Thunder's User Guide, an application to help designers follow the process Thunder",
  "homepage": "https://github.com/caionunes3000/thunder",
  "author": {
    "name": "Caio Nunes & Ticianne Darin",
    "email": "caionunes3000@gmail.com"
  },
  "license": "MIT",
  "main": "dist-electron/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "prod": "electron-vite preview",
    "postinstall": "electron-builder install-app-deps",
    "build:all": "rm -rf dist dist-electron release && yarn build && electron-builder -mw"
  },
  "dependencies": {
    "@axe-core/react": "^4.8.5",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.15.10",
    "@mui/material": "^5.15.10",
    "@radix-ui/react-popover": "^1.1.13",
    "@react-pdf/renderer": "^3.4.5",
    "date-fns": "^4.1.0",
    "electron-icon-builder": "^2.0.1",
    "electron-store": "^8.1.0",
    "i18next": "^23.10.0",
    "react": "^18.2.0",
    "react-color": "^2.19.3",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.0.5",
    "react-icons": "^5.0.1",
    "react-router-dom": "^6.22.3",
    "react-slick": "^0.30.2",
    "react-youtube": "^10.1.0",
    "slick-carousel": "^1.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.55",
    "@types/react-color": "^3.0.11",
    "@types/react-dom": "^18.2.19",
    "@types/react-slick": "^0.23.13",
    "@types/react-youtube": "^7.10.0",
    "@types/uuid": "^9.0.8",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "electron": "^28.2.3",
    "electron-builder": "^24.9.1",
    "electron-vite": "^3.1.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.3",
    "vite-plugin-static-copy": "^2.3.1"
  },
  "build": {
    "appId": "com.thunder.app",
    "productName": "Thunder's User Guide",
    "directories": {
      "output": "release",
      "buildResources": "public"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "public/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "public/icons/mac/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/icons/win/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "public/icons/png/512x512.png"
    }
  }
}